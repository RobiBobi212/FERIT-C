#include<stdio.h>
#include<math.h>
int main(void){
    int ulaz, i, izlaz[7];
    int neg=0, sum=0;
    do{
    scanf("%d",&ulaz);
    }while(ulaz<(-128)||ulaz>128);
    for(i=1;i<8;i++){
        if(abs(ulaz)-sum-pow(2,(7-i))>=0)
        {
            sum+=pow(2,(7-i));
            izlaz[i]=1;
            
        }
        else izlaz[i]=0;
    }
    if(ulaz<0) izlaz[0]=1; 
    for(i=0;i<8;i++)
        printf("%d",izlaz[i]);
    return 0;
}
